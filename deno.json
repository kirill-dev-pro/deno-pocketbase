{
  "compilerOptions": {
    "allowJs": true,
    "strict": true
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "options": {
      "useTabs": false,
      "lineWidth": 100,
      "indentWidth": 2,
      "singleQuote": true,
      "semiColons": false,
      "proseWrap": "preserve"
    }
  }
}
